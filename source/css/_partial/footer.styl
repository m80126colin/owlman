footer
  margin-top 1rem
  background color-footer
  padding 0 2% 0.5rem

#footer
  width 95%
  margin 0 auto
  overflow hidden
  position relative
  .line
    width 100%
    height 14rem
    margin 0 auto
    @media mini
      width 10rem
      float left
      position relative
    span
      display block
      width 0.5rem
      height 6.25rem
      border-right 0.125rem solid color-white
      margin 0 auto
      @media mini
        position absolute
        left 3rem
        margin 0 0 1.5rem

.author
  width w=(110/16)rem
  height w
  margin 0 auto
  if dataURI
    background no-repeat url(author-img-data) left top
  else
    background no-repeat url(root+author-img) left top 
  background-size w w
  border-radius (w/2)
  transition transform 2s ease-out
  &:hover
    transform rotateZ(360deg)
  @media mini
    position: absolute;
    top 6rem
    margin 0 0 1.5rem

.info
  if ShowCustomFont
    font-family font-custom-family
    font-smoothing()
    font-size font-size+50
    line-height 1.3rem
  else
    font-family font-default
    line-height line-height+0.15
  width 90%
  margin 0 auto
  color color-theme-3
  @media mini
    margin 4.5rem 0 2rem 0
    float left
    width 75%

.social-font
  width 100%
  margin 0 auto
  float left
  padding-left 1%
  @media phone
    padding-left 20%
  @media mini
    width 18rem 
    position absolute  
    right -3rem
    top 3rem
  a
    float left
    display block
    width 10%
    color color-theme-3
    font-size font-size+80
    padding 0.5rem
    @media tablet
      padding 0.3rem
    &:hover:before
      color color-footer-hover
    &[title="weibo"]::before,&[title="twitter"]::before,&[title="github"]::before,&[title="facebook"]::before,&[title="google_plus"]::before
      font-family font-icon-family
      font-smoothing()
    &[title="weibo"]::before
      content "\f18a"
    &[title="twitter"]::before
      content "\f081"
    &[title="github"]::before
      content "\f092"
    &[title="facebook"]::before
      content "\f082"    
    &[title="google_plus"]::before
      content "\f0d4"
 
.copyright
  if ShowCustomFont
    font-smoothing()
    font-family font-custom-family
  else
    font-family font-default
    font-size 0.6rem
  width 100%
  color color-white
  text-align center
  @media mini
    float left
  a
    color color-theme-3
    &:hover
      color color-footer-hover
