.post, .page
	background color-section
	a
		color color-link
		&:hover
			color color-hover
	hr 
		border 1px solid lighten(color-gray,30%)
	.photos
		max-width 90%
		display block
		margin 0.2rem
		height auto
		vertical-align middle
		background #FFFFFF
		max-width 90%
		color #000000
		border 1px solid #CCCCCC
		padding 0.2rem
		box-shadow 1px 2px 2px rgba(20%,20%,20%,0.6)
		height 100px
		float left

article
	header.article-info
		@media mini
			border-bottom 1px solid lighten(color-gray,30%)
		>h1
			padding 0.2rem 3%
			font-size font-size+70
			line-height line-height
			@media tablet
				font-size font-size+100
				padding-top 0.3rem
			word-wrap break-word 
			word-break normal
			font-smoothing antialiased
			border-left 5px solid color-theme-2
		>p.article-author
			padding 0.3rem 4% 0.3rem 0
			text-align right
			border-bottom 1px solid lighten(color-gray,30%)
			@media mini
				float right
				border-bottom none
		>p.article-time
			padding-top 0.5rem
			font-size 0.8rem
			text-align center
			@media mini
				float right
				margin-right 1rem
				padding-top 0.1rem
				font-size 0.9rem
			&:before
				font-family font-icon-family
				font-size font-size+30
				content "\f017"
				font-smoothing()			
	.article-content
		padding 1.5rem 4%
		.kb			
			padding .1rem .6rem
			border 1px solid color-gray
			background-color code-color
			color darken(color-gray,30%)
			box-shadow 0 1px 0 rgba(0,0,0,0.2),0 0 0 2px color-white inset
			border-radius 3px
			display inline-block
			margin 0 .1em;
			text-shadow 0 1px 0 color-white
			line-height line-height
			white-space nowrap
		h1
			color color-h1
			font-size font-size+80
			line-height 1.2rem
		h2
			color color-h2
			font-size font-size+60
			line-height 1.2rem
		h3, h4, h5, h6
			color color-h3
			font-size font-size+40
		h1, h2, h3, h4, h5, h6
			font-smoothing antialiased
			padding 0.3rem 0
			margin 0.5rem 0
			>code
				padding 2px 4px
				font-size 90%
				color #c7254e
				background-color rgba(249, 249, 249, 0.1)
				white-space nowrap
				border-radius 4px
				font-family font-mono
				margin 0 2px
		hr 
			border 1px solid lighten(color-gray,30%)
		strong, rem
			font-weight bold
		acronym, abbr
			border-bottom 1px dotted
		blockquote
			margin 0.65rem 0 0.65rem 4%
			padding-left 1%
			padding-right 1%
			line-height line-height
			font-size font-size+10
			border-left 5px solid rgba(152, 232, 99, 0.8)
			font-family Georgia, font-default
			footer
				background color-section
				padding 0
				margin 0
				font-size 80%
				line-height 1rem
			cite
				font-style italic
				padding-left 0.5rem
		ul, ol
			padding-left 2rem
			font-size font-size+5
			@media mini
				padding-left 3rem
		ul li
			list-style disc
			text-align match-parent
			margin 0.5rem 0
		ol li
			list-style-type decimal
			margin 0.5rem 0
		dl dt
			font-weight blod
		ul li>code, ol li>code, p code, strong code, rem code
			padding 2px 4px
			font-size 90%
			color #c7254e
			background-color rgba(249, 249, 249, 0.1)
			white-space nowrap
			border-radius 4px
			font-family font-mono
			margin 0 2px
		p
			font-size font-size+5
			line-height line-height+0.2
			margin 0.7rem 0
			@media tablet
				margin 1.2rem 0
		img, video, figure img
			max-width 90%
			display block
			margin auto
			height auto
			vertical-align middle
			background #FFFFFF
			color #000000
			border 1px solid #CCCCCC
			padding 0.5rem
			box-shadow 1px 2px 2px rgba(20%,20%,20%,0.6)
		figcaption, .caption
			text-align center
			display block
			font-size 0.9rem
			font-weight blod
		.video-container
			position relative;
			padding-top 56%
			height 0
			overflow hidden
			iframe, object, embed
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				margin-top 0
		table
			width 100%
			border-collapse collapse
			border-spacing 0
			th
				font-weight bold
				border-bottom 3px solid lighten(color-gray,30%)
				padding-bottom 0.5rem
			td 
				border-bottom 1px solid lighten(color-gray,30%)
				padding 10px 0
		.pullquote
			text-align left
			width 45%
			margin 0
			border none
		.left
			margin-left 0.5rem
			margin-right 1rem
			float left
		.right
			margin-right 0.5rem
			margin-left 1rem
			float right